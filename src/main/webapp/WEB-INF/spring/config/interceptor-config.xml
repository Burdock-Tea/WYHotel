<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- 
	Namespaces 탭에서 mvc 기능 추가
	web.xml에 초기 설정 파일로 이 파일을 추가 
	-->

	<bean id="memberLoginSuccessHandler" class="com.ictproject.wyhotel.utill.interceptor.MemberLoginSuccessHandler" />
	<bean id="autoLogin" class="com.ictproject.wyhotel.member.commons.AutoLoginInterceptor" />
	
	<mvc:interceptors>
	
		<!-- 로그인 이후에 실행되는 postHandler -->
		<mvc:interceptor>
			<mvc:mapping path="/member/login"/>
			<ref bean="memberLoginSuccessHandler" />
		</mvc:interceptor>
		
		<!-- 자동 로그인 인터셉터 -->
		<mvc:interceptor>
			<mvc:mapping path="/member/login"/>
			<ref bean="autoLogin" />
		</mvc:interceptor>
		
			
	</mvc:interceptors>
	
</beans>
